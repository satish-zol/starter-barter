  <div id="modal_cancel_the_proposal" class="modal hide fade" aria-hidden="true">
    <%= form_for(:message , :url => cancel_the_proposal_path, :html => {:class => "form-horizontal", :remote => true}) do |f| %>

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h3>Cancel The Proposal</h3>
      </div>	
      
      
      <div class="modal-body">
        <%= f.hidden_field :job_id %>
        <%= f.hidden_field :user_id %>
        <div class="control-group">
          <%= f.label :reason, :class =>"control-label" %>
          <div class="controls">
            <%= f.text_area :reason %>
          </div>
        </div>
      </div>

      <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal">Close</a>
        <a href="#"><%= f.submit "Send", :class=>"btn btn-primary" %></a>
      </div>  
    <% end %>
  </div>  	